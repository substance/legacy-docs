    "text1": {
      "type": "text",
      "id": "text1",
      "content": "With Substance Composer Beta 2 users can create their own templates to customize the output of the Substance Composer."
    },
    "publication_info": {
      "id": "publication_info",
      "type": "publication_info"
    },
    "contributor_66a9ce0d804fdf8b4540a5d2de83fcfb": {
      "type": "contributor",
      "id": "contributor_66a9ce0d804fdf8b4540a5d2de83fcfb",
      "source_id": "",
      "name": "Michael Aufreiter",
      "role": "author",
      "description": "As the initiator of Substance, Michael coordinates the project and leads UI/UX development. He is a passionate open source commiter since many years. Notable projects include Prose, a visual interface for managing content on GitHub, eLife Lens and of course Substance.",
      "image": "contributor_66a9ce0d804fdf8b4540a5d2de83fcfb.png",
      "image_url": "",
      "email": "",
      "contribution": ""
    },
    "heading_51259c7a289b837048d82fdfeb9e1c5d": {
      "type": "heading",
      "id": "heading_51259c7a289b837048d82fdfeb9e1c5d",
      "source_id": "",
      "content": "Setup",
      "level": 1
    },
    "386b16fc6e92d18bb4b7ed42ab960835": {
      "type": "text",
      "id": "386b16fc6e92d18bb4b7ed42ab960835",
      "source_id": "",
      "content": "A good way to start is to download the default set of templates, and use that as a basis for your own template."
    },
    "web_resource_ed7112854926f625b463e4ca6985adb3": {
      "type": "web_resource",
      "id": "web_resource_ed7112854926f625b463e4ca6985adb3",
      "description": "Substance Default Templates",
      "url": "https://github.com/substance/templates/archive/v0.1.0.zip"
    },
    "citation_reference_876f2980186c1e244e66e5e51ab99bcb": {
      "type": "citation_reference",
      "id": "citation_reference_876f2980186c1e244e66e5e51ab99bcb",
      "path": [
        "386b16fc6e92d18bb4b7ed42ab960835",
        "content"
      ],
      "range": [
        26,
        34
      ],
      "target": "web_resource_ed7112854926f625b463e4ca6985adb3"
    },
    "c6e6c37277d396b2e5cde5dce54d2954": {
      "type": "text",
      "id": "c6e6c37277d396b2e5cde5dce54d2954",
      "source_id": "",
      "content": "Find the Substance Composer Application Folder at ~/Library/Application Support/Substance Composer. Create a templates folder if it doesn't already exist."
    },
    "code_a4e6afe1f8673fb4f9f1af1051b40f75": {
      "type": "code",
      "id": "code_a4e6afe1f8673fb4f9f1af1051b40f75",
      "path": [
        "c6e6c37277d396b2e5cde5dce54d2954",
        "content"
      ],
      "range": [
        50,
        98
      ]
    },
    "code_e84bd00e535206a27c2414945fa924c7": {
      "type": "code",
      "id": "code_e84bd00e535206a27c2414945fa924c7",
      "path": [
        "c6e6c37277d396b2e5cde5dce54d2954",
        "content"
      ],
      "range": [
        109,
        118
      ]
    },
    "0555cc280eee1f4aedcaafcc7cc0de97": {
      "type": "text",
      "id": "0555cc280eee1f4aedcaafcc7cc0de97",
      "source_id": "",
      "content": "Put your custom template there. Use a machine-readable name for the folder. E.g. ocean-blue."
    },
    "d2ee427eda464976dd191837ba91e864": {
      "type": "text",
      "id": "d2ee427eda464976dd191837ba91e864",
      "source_id": "",
      "content": "Make sure you have specified a template configuration in a config.json file."
    },
    "web_resource_18032466c8b060914abc47643d6fe9e3": {
      "type": "web_resource",
      "id": "web_resource_18032466c8b060914abc47643d6fe9e3",
      "description": "Substance Composer Beta",
      "url": "http://substance.io/beta"
    },
