    "heading_b5acf91b94f2ca8a22c81cc21ec1c273": {
      "type": "heading",
      "id": "heading_b5acf91b94f2ca8a22c81cc21ec1c273",
      "source_id": "",
      "content": "Customize the main layout",
      "level": 1
    },
    "heading_fe8a6d7a0767c17c9eefba2b70f7b675": {
      "type": "heading",
      "id": "heading_fe8a6d7a0767c17c9eefba2b70f7b675",
      "source_id": "",
      "content": "Customize Markup of individual node types",
      "level": 1
    },
    "48e90e459dfa83e0b12d271008b0ae22": {
      "type": "text",
      "id": "48e90e459dfa83e0b12d271008b0ae22",
      "source_id": "",
      "content": "Most of the time the default implementations of node templates in combination with CSS will suffice, but you can certainly customize their markup too. E.g. here's an example implementation of the figure.html template."
    },
    "code_a1647c6195e6f609e01735031490afe6": {
      "type": "code",
      "id": "code_a1647c6195e6f609e01735031490afe6",
      "path": [
        "48e90e459dfa83e0b12d271008b0ae22",
        "content"
      ],
      "range": [
        196,
        207
      ]
    },
    "code_block_543f9811d46e2ba3c013882fd5979b7a": {
      "type": "code_block",
      "id": "code_block_543f9811d46e2ba3c013882fd5979b7a",
      "source_id": "",
      "content": "<div id=\"<%= node.id %>\" class=\"content-node figure\">\n  <div class=\"content\">\n    <a href=\"<%= node.image %>\" target=\"_blank\">\n      <img src=\"<%= node.image %>\">\n    </a>\n    <% if (node.caption) { %>\n    <div class=\"caption\">\n      <%= annotated([node.caption, 'content']) %>\n    </div>\n    <% } %>\n  </div>\n</div>"
    },
