    "heading_563418a05f5cf49583610c36a078dffd": {
      "type": "heading",
      "id": "heading_563418a05f5cf49583610c36a078dffd",
      "source_id": "",
      "content": "CSS and images",
      "level": 1
    },
    "e3cc3b152c523811040b23c232fdc65f": {
      "type": "text",
      "id": "e3cc3b152c523811040b23c232fdc65f",
      "source_id": "",
      "content": "Just put your custom css files into the assets folder. They'll be exposed in the root of the generated page, so you can embed them with a link tag as usual (see example above). Same goes for images. Keep the assets folder flat, as we do not support sub-folders yet. Soon to come."
    },
    "e9ea83b8a6f32e82ed2c169bb0e4d7a9": {
      "type": "text",
      "id": "e9ea83b8a6f32e82ed2c169bb0e4d7a9",
      "source_id": "",
      "content": "Customize the main layout in nodes/document.html. You can put any HTML in there along with EJS for generated content. Here's a very basic example."
    },
    "code_cfb518f7f9a7d3527db4b32b991e19da": {
      "type": "code",
      "id": "code_cfb518f7f9a7d3527db4b32b991e19da",
      "path": [
        "e9ea83b8a6f32e82ed2c169bb0e4d7a9",
        "content"
      ],
      "range": [
        29,
        48
      ]
    },
    "code_block_700f4fbfab8b89ac27f292b0684cd4a8": {
      "type": "code_block",
      "id": "code_block_700f4fbfab8b89ac27f292b0684cd4a8",
      "source_id": "",
      "content": "<html>\n<head>\n<link href=\"style.css\" rel=\"stylesheet\" />\n<title><%= doc.title %></title>\n</head>\n<body>\n<%= render(doc) %>\n</body>\n</html>\n"
    },
    "d65cb065c1eb4cf72f4534560eb24238": {
      "type": "text",
      "id": "d65cb065c1eb4cf72f4534560eb24238",
      "source_id": "",
      "content": "Note, that we expose a render function, which inserts the contents of the document at that position."
    },
